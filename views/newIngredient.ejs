<%- include('header') -%>
    <div class="container mt-2">
      <div class="row">
        <h1>New Ingredient</h1>
      </div>
      <div class="row">
        <div class="col-sm-4 col-0"></div>
        <div class="col-sm-4 col-12">
          <form method="POST">
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input type="text" class="form-control" id="name" name="name"/>
            </div>
            <div class="mb-3">
              <label for="measurement" class="form-label">Measurement</label>
              <input type="text" class="form-control" id="measurement" name="measurement"/>
            </div>
            <div class="mb-3">
              <label for="unit" class="form-label">Unit</label>
              <input type="number" class="form-control" id="unit" name="unit"/>
            </div>
            <div class="mb-3">
                <label for="kcal" class="form-label">kCal</label>
                <input type="number" class="form-control" id="kcal" name="kcal"/>
              </div>
              <div class="mb-3">
                <label for="protein" class="form-label">Protein</label>
                <input type="number" class="form-control" id="protein" name="protein"/>
              </div>
              <div class="mb-3">
                <label for="carbohydrate" class="form-label">carbohydrate</label>
                <input type="number" class="form-control" id="carbohydrate" name="carbohydrate"/>
              </div>
              <div class="mb-3">
                <label for="fat" class="form-label">Fat</label>
                <input type="number" class="form-control" id="fat" name="fat"/>
              </div>
            <input type="submit" class="btn btn-primary" value="Submit"/>
            <a class="btn btn-secondary" href="/ingredients">Cancel</a>
          </form>
        </div>
      </div>
    </div>

    <%- include('footer') -%>