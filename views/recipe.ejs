<%- include('header') -%>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid d-flex flex-row-reverse">
        <a class="btn btn-outline-info" href="../index.html">Recipes</a>
      </div>
    </nav>

    <div class="container">
      <div class="row">
        <h1 class="mt-2"><%= recipe.name %>:</h1>
        <h3 class="mt-5">Ingredients:</h3>
      </div>
      <div class="row mt-2">
        <div class="col-6">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Name</th>
                <th scope="col">Quantity</th>
                <th scope="col">Unit</th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody>
              <% recipeIngredients.forEach(function(ringredient) { %>
              <tr>
                <th scope="row"><%= ringredient.name %></th>
                <td><%= ringredient.quantity %></td>
                <td><%= ringredient.measurement %></td>
                <td>
                  <a class="btn btn-danger" href="/manual/<%= recipe._id %>/del/<%= ringredient._id %>">X</a>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col-2">
          <a href="/manual/<%= recipe._id %>/addIngredient" class="btn btn-primary">Add Ingredient</a>
        </div>
      </div>
    </div>

<%- include('footer') -%>
