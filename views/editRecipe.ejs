<%- include('header') -%>
    <div class="container mt-2">
      <div class="row">
        <h1>Edit Recipe</h1>
      </div>
      <div class="row">
        <div class="col-sm-4 col-0"></div>
        <div class="col-sm-4 col-12">
          <form method="POST">
            <div class="mb-3">
              <label for="recipeNameInput" class="form-label">Name</label>
              <input type="text" class="form-control" id="recipeNameInput" name="recipeNameInput" value="<%= recipe.name %>"/>
            </div>
            <div class="mb-3">
              <label for="difficultyInput" class="form-label">Difficulty</label>
              <input type="text" class="form-control" id="difficultyInput" name="difficultyInput" value="<%= recipe.difficulty %>"/>
            </div>
            <div class="mb-3">
              <label for="timeInput" class="form-label">Time</label>
              <input type="text" class="form-control" id="timeInput" name="timeInput" value="<%= recipe.time %>"/>
            </div>
            <input type="submit" class="btn btn-primary" value="Submit"/>
            <a class="btn btn-secondary" href="/">Cancel</a>
          </form>
        </div>
      </div>
    </div>

<%- include('footer') -%>
