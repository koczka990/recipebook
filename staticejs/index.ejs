<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid d-flex flex-row-reverse">
        <a class="btn btn-outline-info" href="<%= linkToPage %>"
          ><%= navButtonText %></a
        >
      </div>
    </nav>
    <div class="row">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Difficulty</th>
            <th scope="col">Time</th>
            <th scope="col">kcal</th>
            <th scope="col">Protein</th>
            <th scope="col">Carbohydrate</th>
            <th scope="col">Fat</th>
            <th scope="col"></th>
          </tr>
        </thead>

        <% for (var i = 0; i < quotation.length; /* I save the data in a
        variable 'quotation', I don't know how you named your variable */ i++) {
        %>
        <tr>
          <td><%= quotation[i].name %></td>
          <td><%= quotation[i].difficulty %></td>
          <td><%= quotation[i].time %></td>
          <td><%= quotation[i].kcal %></td>
          <td><%= quotation[i].protein %></td>
          <td><%= quotation[i].carbohydrate %></td>
          <td><%= quotation[i].fat %></td>
          <td>
            <button class="btn btn-danger">X</button>
            <a class="btn btn-info" href="recipes/applepie.html">INFO</a>
            <a class="btn btn-secondary" href="editRecipe.html">EDIT</a>
          </td>
        </tr>
        <% } %>
      </table>
    </div>

    <div class="row">
      <div class="col-10"></div>
      <div class="col-2">
        <a href="newRecipe.html" class="btn btn-primary">New Recipe</a>
      </div>
    </div>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
